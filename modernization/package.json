{
  "name": "@jimsheen/yalc",
  "version": "2.0.0-alpha.1",
  "description": "Local package development tool, modernized and supercharged. Drop-in replacement for yalc with better performance and modern features.",
  "keywords": [
    "yalc",
    "local",
    "packages",
    "development",
    "monorepo",
    "workspace",
    "pnpm",
    "catalog",
    "modern"
  ],
  "homepage": "https://github.com/jimsheen/yalc",
  "repository": {
    "type": "git",
    "url": "https://github.com/jimsheen/yalc.git"
  },
  "bugs": {
    "url": "https://github.com/jimsheen/yalc/issues"
  },
  "author": "Jim Sheen <jim@example.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.js"
    }
  },
  "bin": {
    "yalc": "./dist/cli/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:performance": "vitest run tests/performance",
    "lint": "eslint src tests --ext .ts,.js",
    "lint:fix": "eslint src tests --ext .ts,.js --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src tests docs",
    "format:check": "prettier --check src tests docs",
    "clean": "rimraf dist coverage",
    "dev": "pnpm build:watch & pnpm test:watch",
    "prerelease": "pnpm clean && pnpm lint && pnpm typecheck && pnpm test:coverage && pnpm build",
    "release": "changeset publish",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "migration:test": "vitest run tests/migration --reporter=verbose",
    "benchmark": "tsx scripts/benchmark.ts"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "detect-indent": "^7.0.1",
    "execa": "^8.0.1",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "ignore": "^5.3.0",
    "ini": "^4.1.1",
    "listr2": "^8.0.0",
    "npm-packlist": "^8.0.0",
    "ora": "^7.0.1",
    "picocolors": "^1.0.0",
    "semver": "^7.5.4",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.0",
    "@types/semver": "^7.5.6",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "memfs": "^4.6.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.6.1",
    "rollup-plugin-dts": "^6.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitepress": "^1.0.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "typescript": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  }
}
