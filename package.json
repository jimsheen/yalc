{
  "name": "@jimsheen/yalc",
  "version": "2.0.0",
  "description": "Local package development tool, modernized and supercharged. Drop-in replacement for yalc with better performance and modern features.",
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "yalc",
    "local",
    "packages",
    "development",
    "monorepo",
    "workspace",
    "pnpm",
    "catalog",
    "modern"
  ],
  "homepage": "https://github.com/jimsheen/yalc",
  "repository": {
    "type": "git",
    "url": "https://github.com/jimsheen/yalc.git"
  },
  "bugs": {
    "url": "https://github.com/jimsheen/yalc/issues"
  },
  "author": "Jim Sheen <jim@example.com>",
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "bin": {
    "yalc": "dist/yalc.js"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./yalc": {
      "types": "./dist/yalc.d.ts",
      "require": "./dist/yalc.js",
      "import": "./dist/yalc.mjs"
    },
    "./config": {
      "types": "./dist/core/config/types.d.ts",
      "require": "./dist/core/config/types.js",
      "import": "./dist/core/config/types.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "clean": "ts-clean-built --old && trash **/*.log && rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "test": "vitest run && npm run lint:check",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run src",
    "test:unit:watch": "vitest src",
    "test:unit:coverage": "vitest run --coverage src",
    "test:integration": "vitest run tests/integration",
    "test:regression": "vitest run tests/regression/regression.test.ts",
    "test:all": "vitest run",
    "regression:capture": "node scripts/regression-validate.js capture",
    "regression:validate": "node scripts/regression-validate.js validate",
    "test:dev": "vitest --watch",
    "ci": "npm run typecheck && npm run build && npm run test",
    "lint": "eslint src --fix",
    "lint:check": "eslint src",
    "typecheck": "tsc --noEmit",
    "dev": "tsup --watch",
    "dev:cli": "npx tsx src/yalc.ts",
    "semantic-release": "semantic-release",
    "test:workflows": "./tests/workflows/test-workflows.sh all",
    "test:ci-local": "./tests/workflows/test-workflows.sh ci",
    "test:release-local": "./tests/workflows/test-workflows.sh release",
    "test:quick": "./tests/workflows/quick-test.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yalc check && pretty-quick --staged"
    }
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@types/rc": "^1.2.4",
    "chalk": "^5.6.2",
    "detect-indent": "^7.0.2",
    "fs-extra": "^11.3.2",
    "glob": "^11.0.3",
    "ignore": "^7.0.5",
    "ini": "^6.0.0",
    "npm-packlist": "^10.0.3",
    "rc": "^1.2.8",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.3.5",
    "@semantic-release/npm": "^10.0.6",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.10.1",
    "@types/npm-packlist": "^7.0.3",
    "@types/yargs": "^17.0.34",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "clean-ts-built": "^1.0.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^1.3.1",
    "marked-gfm-heading-id": "^4.1.3",
    "marked-mangle": "^1.1.12",
    "prettier": "^3.6.2",
    "pretty-quick": "^4.2.2",
    "semantic-release": "^21.1.2",
    "trash-cli": "^7.0.0",
    "ts-clean-built": "^1.2.1",
    "tsup": "^8.1.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vitest": "^4.0.8"
  },
  "license": "MIT"
}
